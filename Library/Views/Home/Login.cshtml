

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-info">
        @ViewBag.SuccessMessage
    </div>
}

<div class="loginDiv">
    <form class="formulaire" action="/Home/Login" method="post">
        <div class="text-center">
            <h1 class="h4 text-gray-900 mb-4">Login</h1>
        </div>
        <div>
            <input class="form-control form-control-user" type="email" id="Email" name="Email" aria-describedby="emailHelp" placeholder="Enter Email Address...">
        </div>
        <div>
            <input class="form-control form-control-user" type="password" id="Password" name="Password" placeholder="Password">
        </div>
        <input class="btn btn-primary btn-user btn-block" type="submit" value="Login" />
        <hr>
        @if (@ViewBag.ErrorLoginMessage != null)
        {
            <center>
                <p class="alert alert-danger">@Html.Raw(ViewBag.ErrorLoginMessage)</p>
            </center>
        }
    </form>
</div>



