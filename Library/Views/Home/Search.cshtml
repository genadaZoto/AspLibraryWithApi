
@{
    ViewBag.Title = "Search";
}

<h4>Your search result...</h4>

<div class="row text-center">
    @foreach (Library.Models.BookModel item in Model)
    {
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card h-100">
                <img class="card-img-top" src="@item.Image" alt="">
                <div class="card-body">
                    <h4 class="card-title">@item.Title</h4><br />
                    <p class="card-text"><strong>Author: </strong>@item.Author</p><br />
                    <p class="card-text"><strong>Category:  </strong>@item.Category</p><br />
                    <p class="card-text"><strong>Description: </strong>@item.Description</p><br />
                </div>

            </div>
        </div>
    }
</div>